<Window x:Class="UPS_OrgChart_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPS_OrgChart_WPF"
        mc:Ignorable="d"
        Title="OrgChart" Height="800" Width="1500">
    <Grid>
        <Button x:Name="UploadExcelButton"
            Content="Upload Excel"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10"
            Width="120"
            Height="30"
            Click="UploadExcelButton_Click"/>
        <Button x:Name="ExportPdfButton"
            Content="Export as PDF"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Width="120"
            Height="30"
            Click="ExportPdfButton_Click"/>

        <TabControl Name="OrgChartTabControl" Margin="0,40,0,0">
            <TabItem Header="Horizontal" IsSelected="True">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="OrgChartCanvas" MinWidth="1400"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Vertical" IsEnabled="False">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="OrgChartVerticalCanvas" MinHeight="2000" MinWidth="4800"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
